modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["deploy-rs", "freetype", "glibcLocales"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Dashboard"

[[workflows.workflow]]
name = "Web Dashboard"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind=0.0.0.0:5000 --reuse-port --workers=1 src.memo_bot_pro.web_app:app"
waitForPort = 5000

[deployment]
deploymentTarget = "vm"
run = ["bash", "start_production.sh"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34729
externalPort = 3000
